// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id            String   @id @default(uuid())
  title         String
  summary       String
  content       String   @db.Text
  publishDate   DateTime
  tags          String[]
  readTime      Int
  coverImage    String?
  link          String?
  type          String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Draft {
  id            String   @id @default(uuid())
  title         String
  summary       String
  content       String   @db.Text
  publishDate   DateTime
  tags          String[]
  readTime      Int
  coverImage    String?
  link          String?
  type          String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Craft {
  id            String   @id @default(uuid())
  name          String
  description   String   @db.Text
  category      String   // component, effect, control, demo, experiment
  technologies  String[]
  featured      Boolean  @default(false)
  weight        Int      @default(1)
  coverImage    String?
  demoUrl       String?
  useCase       String?  @db.Text
  githubUrl     String?
  content       String?  @db.Text
  relations     Json?    // 存储关系数组 [{targetId, type}]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Goal {
  id                    String   @id @default(uuid())
  title                 String
  description           String   @db.Text
  category              String   // technical, personal, creative, business, health, social
  priority              String   // high, medium, low
  status                String   // planning, active, paused, completed, archived
  progress              Int      @default(0)
  duration              Int      // 周期天数
  startDate             String   // YYYY-MM-DD
  endDate               String   // YYYY-MM-DD
  actualStartDate       String?  // 实际开始日期
  pausedAt              String?  // 暂停时间
  totalPausedDuration   BigInt   @default(0) // 总暂停时长（毫秒）
  targetSkills          String[]
  milestones            Json?    // 里程碑数组
  successCriteria       String[] // 成功标准
  generatedData         Json?    // 存储 Dify 生成的输入输出数据
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

